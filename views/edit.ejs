<% layout('layout/boilerplate') -%>
<link rel="stylesheet" href="/css/create.css" />
<h1 class="display-4">Edit your Note!</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-6 offset-3 create-form">
      <div class="card">
        <div class="card-body">
          <form action="/notes/<%= note._id %>/edit?_method=PUT" method="POST">
            <div class="form-group">
              <label for="title">Title</label>
              <input
                type="text"
                class="form-control card-title"
                id="title"
                name="title"
                value="<%= note.title %>"
              />
            </div>
            <div class="form-group">
              <label for="note">Your Note:</label>
              <textarea
                class="form-control card-text"
                name="text"
                id="note"
                cols="30"
                rows="10"
                placeholder="Note"
              >
<%= note.text %></textarea
              >
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block card-link">Post!</button>
            </div>
            <div class="form-group">
              <button class="btn btn-danger btn-block card-link" id="cancel">
                Cancel
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/create.js"></script>
